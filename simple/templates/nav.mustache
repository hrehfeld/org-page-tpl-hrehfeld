    <div>{{! nav }}
      <header class="masthead">
        <h1 class="masthead-title"><a href="/">{{site-main-title}}</a></h1>
        {{#description}}
          <p>{{description}}</p>
        {{/description}}
        <ul id="nav-categories">
          {{#nav-categories}}
          <li><a href="{{category-uri}}">{{category-name}}</a></li>
          {{/nav-categories}}
        </ul>
        <ul id="site-meta">
          <li><a href="/tags/">Tags</a></li>
          <li><a href="{{github}}">GitHub</a></li>
          <li><a href="/rss.xml">RSS</a></li>
        </ul>
        {{#avatar}}
        <img class="avatar" src="{{avatar}}" />
        {{/avatar}}
      </header>
    </div>
